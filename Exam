<body>
    <div class="quiz-container">
        <h1>Web Development Quiz</h1>
        <div id="quiz"></div>
        <button id="submit-btn" onclick="submitQuiz()">Submit</button>
        <button id="retest-btn" onclick="retestQuiz()" style="display: none;">Retake Quiz</button>
        <div id="result" class="result"></div>
    </div>

    <script>
        const questions = [
        { question: "HTML stands for?", answer: "HyperText", options: ["HyperText", "HighText", "Markup"] },
        { question: "CSS stands for?", answer: "Cascading", options: ["Cascading", "Common", "Counter"] },
        { question: "JS stands for?", answer: "JavaScript", options: ["JavaScript", "JavaSuper", "JustScript"] },
        { question: "A framework of JS?", answer: "React", options: ["React", "Vue", "Angular"] },
        { question: "Keyword to define variable", answer: "var", options: ["var", "let", "const"] },
        { question: "Non-Primitive data type?", answer: "Array", options: ["Array", "Number", "String"] },
        { question: "Git command to add changes?", answer: "add", options: ["add", "push", "commit"] },
        { question: "A library of JS?", answer: "Jquery", options: ["Jquery", "Flask", "Django"] },
        { question: "To make webpage interactive we use?", answer: "JavaScript", options: ["JavaScript", "HTML", "CSS"] },
        { question: "To style webpage we use?", answer: "CSS", options: ["CSS", "HTML", "JavaScript"] }
    ];
        function generateQuiz() {
            const quizContainer = document.getElementById('quiz');
            quizContainer.innerHTML = '';
            const randomQuestions = getRandomQuestions(questions, 10);

            randomQuestions.forEach((q, index) => {
                const questionDiv = document.createElement('div');
                questionDiv.classList.add('question');
                questionDiv.innerHTML = `
                    <p>${index + 1}. ${q.question}</p>
                    <div class="options">
                        ${q.options.map(option => `
                            <input type="radio" id="q${index}-${option}" name="q${index}" value="${option}">
                            <label for="q${index}-${option}">${option}</label>
                        `).join('')}
                    </div>
                `;
                quizContainer.appendChild(questionDiv);
            });
        }

        function getRandomQuestions(arr, num) {
            const shuffled = arr.sort(() => 0.5 - Math.random());
            return shuffled.slice(0, num);
        }

        function submitQuiz() {
            const resultDiv = document.getElementById('result');
            resultDiv.innerHTML = '';
            let correctCount = 0;

            for (let i = 0; i < 10; i++) {
                const selectedOption = document.querySelector(`input[name="q${i}"]:checked`);
                if (selectedOption) {
                    const questionText = document.querySelectorAll('.question p')[i].textContent.substring(3).trim();
                    const question = questions.find(q => q.question === questionText);

                    const correctAnswer = question.answer;
                    const options = document.querySelectorAll(`input[name="q${i}"]`);

                    options.forEach(option => {
                        const label = option.nextElementSibling;
                        if (option.value === correctAnswer) {
                            label.classList.add('highlight-correct');
                            if (option.checked) correctCount++;
                        } else if (option.checked) {
                            label.classList.add('highlight-incorrect');
                        }
                    });
                }
            }

            resultDiv.innerHTML = `Score: ${correctCount}/10`;
            if (correctCount === 10) {
                const congratsMessage = document.createElement('div');
                congratsMessage.classList.add('congrats-message');
                congratsMessage.textContent = "ðŸŽ‰ Perfect Score! You're a Web Development Pro! ðŸŽ‰";
                resultDiv.appendChild(congratsMessage);
            }
            document.getElementById('submit-btn').style.display = 'none';
            document.getElementById('retest-btn').style.display = 'block';
        }

        function retestQuiz() {
            generateQuiz();
            document.getElementById('submit-btn').style.display = 'block';
            document.getElementById('retest-btn').style.display = 'none';
            document.getElementById('result').innerHTML = '';
        }

        generateQuiz();
    </script>
</body>
</html>
