    <script>
        function submitQuiz() {
            const answers = {
                q1: "HyperText",
                q2: "Cascading",
                q3: "JavaScript",
                q4: "React",
                q5: "var",
                q6: "Array",
                q7: "add",
                q8: "Jquery",
                q9: "JavaScript",
                q10: "CSS",
            };

            const form = document.getElementById('quiz-form');
            let score = 0;
            let total = Object.keys(answers).length;

            for (const question in answers) {
                const selectedOption = form[question];
                if (selectedOption) {
                    const chosenAnswer = [...selectedOption].find(input => input.checked)?.value;
                    if (chosenAnswer === answers[question]) {
                        score++;
                    }
                }
            }

            document.getElementById('result').textContent = `Score: ${score}/${total}`;
        }
    </script>
